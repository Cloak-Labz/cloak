{
  "name": "@cloak/indexer",
  "version": "0.1.0",
  "description": "Cloak indexer microservice - maintains append-only Merkle tree and serves proofs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "bun --watch src/index.ts",
    "start": "bun run dist/index.js",
    "start:ts": "bun run src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:api": "bun run src/scripts/test-deposit.ts",
    "test:integration": "bun run src/scripts/test-full-flow.ts",
    "clean": "rm -rf dist",
    "migrate": "bun run src/scripts/migrate.ts",
    "docker:build": "docker build -t cloak-indexer .",
    "docker:run": "docker run --rm -p 3001:3001 --env-file .env cloak-indexer"
  },
  "keywords": [
    "solana",
    "zk",
    "privacy",
    "merkle-tree",
    "indexer"
  ],
  "author": "Cloak Labz",
  "license": "MIT",
  "dependencies": {
    "@solana/web3.js": "^1.87.6",
    "@types/cors": "^2.8.17",
    "blake3": "^2.1.7",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "pg": "^8.11.3",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
